{% extends "PTRORencontresBundle::layout.html.twig" %}

{% block contenu %}
	<div class="row">
		<div class="col-md-4 col-md-offset-4 conteneur_principal conteneur_principal_recherche bottom center">
			<h3>Vos messages reçus et envoyés</h3>
		</div>
	</div>
	<div class="row ">
		<div class="col-md-1">
		</div>
		<div class="col-md-10 conteneur_principal2 conteneur_principal_recherche top10">
			<div class="row">
				<div class="col-lg-3 col-md-5 col-xs-7">
					<a class="btn btn-primary bottom3" href="#">Voir les messages supprimés</a>
				</div>
				<div class=" col-lg-9 col-md-7 col-xs-5">
				</div>
			</div>
			<div class="row vertical-align">
				<div class="col-lg-1 col-md-1 col-xs-1  center">
				</div>
				<div class="col-lg-2 col-md-2 col-xs-4 ">
					Correspondant
				</div>
				<div class="col-lg-7 col-md-7 col-xs-4 ">
					Objet
				</div>
				<div class="col-lg-2 col-md-2 col-xs-3 ">
					Date
				</div>
			</div>
			{% for message in messages %}
			<div class="row vertical-align message_padding" id="row_message">
				<div class="vcenter col-lg-1 col-md-1 col-xs-1  center">
					<input type="checkbox" onclick="$(this).closest('#row_message').toggleClass('gris_background');"/>
				</div>
				<div class="col-lg-2 col-md-2 col-xs-4 ">
					<a class="thumbnail inline-block margin0" href="{{ path('ptro_rencontres_profil', {'id' : message.id} )}}">
						<img class="img-responsive" src="{{ message.photo}}" alt="">
						<div class="color_image post-content">
							{{message.pseudo}}
						</div>
					</a>
				</div>
				<div class="vcenter col-lg-7 col-md-7 col-xs-4 ">
					<a href="#" style="text-decoration:none">
						<span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> {{message.sujet}}
					</a>
				</div>
				<div class="vcenter col-lg-2 col-md-2 col-xs-3 ">
					{{message.date_message}}
				</div>
			</div>
			{% endfor %}
			<div class="row vertical-align bottom10 top5">
				<div class="center col-lg-1 col-md-1 col-xs-1 ">
					<button type="submit" class=" btn btn-lg btn-danger" data-toggle="tooltip" data-placement="right" title="Mettre à la corbeille les conversations séléctionnées">
						<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
					</button>
				</div>
				<div class="center col-lg-11 col-md-11 col-xs-11 ">
				</div>
			</div>
        </div>
		</div>
		<div class="col-md-1"></div>
	<nav class="center">
	  <ul class="pagination pagination-md">
		<li class="disabled"><a href="#" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a></li>
		<li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
		<li><a href="#">2 </a></li>
		<li class="disabled"><a href="#">... </a></li>
		<li><a href="#">52 </a></li>
		<li><a href="#">53 </a></li>
		<li><a href="#" aria-label="Next"><span aria-hidden="true">&raquo;</span></a></li>
	  </ul>
	</nav>
	<br>
{% endblock %}
{% block javascript %}
	<script>
		$(function () {
		  $('[data-toggle="tooltip"]').tooltip()
		});
		$('input:checkbox').prop('checked',false);
	</script>
{% endblock %}