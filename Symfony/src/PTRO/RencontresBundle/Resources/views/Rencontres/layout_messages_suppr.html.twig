{% extends "PTRORencontresBundle::layout_global.html.twig" %}

{% block contenu %}		
	<div class="row">
		<div class="col-md-4 col-md-offset-4 conteneur_principal conteneur_principal_recherche bottom center">
			<h3><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Corbeille</h3>
		</div>
	</div>
	<div class="row ">
		<div class="col-md-1">
		</div>
		<div class="col-md-10 conteneur_principal2 conteneur_principal_recherche top10">
			<div class="row">
				<div class="col-lg-3 col-md-5 col-xs-7 bottom3">
				<a href="{{ path('ptro_rencontres_mes_messages') }}" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Retour aux messages</a>
				</div>
				<div class=" col-lg-9 col-md-7 col-xs-5">
				</div>
			</div>
			<div class="row vertical-align">
				<div class="col-lg-1 col-md-1 col-xs-1  center">
				</div>
				<div class="col-lg-2 col-md-2 col-xs-4 ">
					Correspondant
				</div>
				<div class="col-lg-7 col-md-7 col-xs-4 ">
					Objet
				</div>
				<div class="col-lg-2 col-md-2 col-xs-3 ">
					Date
				</div>
			</div>
			{% for message in messages %}
			<div class="row vertical-align message_padding" id="row_message">
				<div class="vcenter col-lg-1 col-md-1 col-xs-1  center">
					<input type="checkbox" onclick="$(this).closest('#row_message').toggleClass('gris_background');"/>
				</div>
				<div class="col-lg-2 col-md-2 col-xs-4 ">
					<a class="thumbnail inline-block margin0" href="{{ path('ptro_rencontres_profil', {'id' : message.id} )}}">
						<img class="img-responsive" src="{{ message.photo}}" alt="">
						<div class="color_image post-content">
							{{message.pseudo}}
						</div>
					</a>
				</div>
				<div class="vcenter col-lg-7 col-md-7 col-xs-4 ">
					<a href="{{ path('ptro_rencontres_discussion', { 'idProfil': message.id }) }}" style="text-decoration:none">
						<span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> {{message.sujet}}
					</a>
				</div>
				<div class="vcenter col-lg-2 col-md-2 col-xs-3 ">
					{{message.date_message}}
				</div>
			</div>
			{% endfor %}
			<div class="row vertical-align bottom10 top5">
				<div class="col-lg-6 col-md-6 col-xs-6 ">
					<button type="submit" class="btn-danger btn btn-md" data-toggle="tooltip" data-placement="right" title="Supprimer définitivement les conversations séléctionnées">
						<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
					</button>
					<button type="submit" class="btn-success btn btn-md" data-toggle="tooltip" data-placement="right" title="Restaurer les conversations séléctionnées">
						<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
					</button>
				</div>
				<div class="center col-lg-6 col-md-6 col-xs-6 ">
				</div>
			</div>
		</div>
    </div>
{% endblock %}	
{% block javascript %}
	<script>
		$(function () {
		  $('[data-toggle="tooltip"]').tooltip()
		});
		$('input:checkbox').prop('checked',false);
	</script>
{% endblock %}