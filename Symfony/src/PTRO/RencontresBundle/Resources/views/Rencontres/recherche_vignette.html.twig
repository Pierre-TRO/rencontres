{% extends "PTRORencontresBundle::layout_recherche.html.twig" %}
{% block vue %}
<div class="col-md-10 conteneur_principal conteneur_principal_recherche">
	<div class="row">	
		{% for profil in profils %}
			<div class="col-lg-3 col-md-4 col-xs-6 thumb">
				<a class="thumbnail" href="#">
					<img class="img-responsive" src="{{profil.image}}" alt="">
					<div class="caption post-content resize left">
						{{profil.pseudo}}, {{profil.age}} ans<br>
						{{profil.ville}}, {{profil.region}}<br> 
						{{profil.nb_photo}} photo(s)
					</div>
				</a>
			</div>
		{% endfor %}
	</div>
</div>
{% endblock %}